{
  "compilerOptions": {
    "outDir": "./dist/",
    "strict": true,
    "target": "esnext",
    "module": "commonjs",
    "lib": ["es2020", "DOM", "DOM.Iterable"],
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,

    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitThis": true,
    "noImplicitAny": true,

    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,

    "allowJs": true,
    "checkJs": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "sourceMap": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": ["src/**/*.ts"]
}
